<% include ../partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">
        EDIT <%= blogs.name %>
    </div>
    <form class= "ui form" action="/blogs/<%= blogs._id %>?_method=PUT" method="POST">
        <div class = "field">
            <label>Title</label>
            <input type="text" name="blog[name]" value = "<%= blogs.name %>">
        </div>
        <div class = "field">
            <label>Image</label>
            <input type="text" name="blog[image]" value = "<%= blogs.image %>">
        </div>
        <div class = "field">
            <label>Blog Content</label>
            <textarea  name="blog[body]"><%= blogs.body %> </textarea>
        </div>
        <button class = "big ui button basic pink"  type = "submit">Submit</button>
    </form>
</div>






<% include ../partials/footer %>